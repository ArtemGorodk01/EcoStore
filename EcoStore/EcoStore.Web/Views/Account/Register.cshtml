@model EcoStore.Web.Models.RegisterModel
<link href="~/css/validation.css" rel="stylesheet" />

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Регистрация</h3>
    </div>
    <div class="card-body">
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label">Введите логин</label><br />
                    <input type="text" asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Введите пароль</label><br />
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label">Повторите пароль</label><br />
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" />
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label">Введите телефон</label><br />
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" />
                </div>
                <div class="form-group">
                    <input class="btn btn-outline-info" type="submit" value="Регистрация" />
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}