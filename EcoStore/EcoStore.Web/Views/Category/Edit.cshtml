@model EcoStore.EFCore.Entities.Category

@{
    ViewData["Title"] = "Категория";
}

<h3>Редактирование категории</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form action="~/category/save">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type ="hidden"/>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-dark" href="~/Category/list">Вернуться к списку категорий</a>
</div>

