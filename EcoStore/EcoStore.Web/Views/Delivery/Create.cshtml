@model EcoStore.EFCore.Entities.Delivery

@{
    ViewData["Title"] = "Доставка";
}

<h3>Доставка</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="~/delivery/create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" type="hidden" />
            <input asp-for="OrderId" class="form-control" type="hidden" />
            <input asp-for="Status" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="DeliveryDate" class="control-label"></label>
                <input asp-for="DeliveryDate" class="form-control" />
                <span asp-validation-for="DeliveryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>
<hr/>
<div>
    <a class="btn btn-outline-dark" href="~/order/list/1/false">Вернуться к списку заказов</a>
</div>

